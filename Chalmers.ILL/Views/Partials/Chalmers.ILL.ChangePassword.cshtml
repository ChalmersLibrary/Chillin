@model Chalmers.ILL.Models.PasswordModel

<div class="col-lg-12">
    <h3>Byt lösenord</h3>
</div>
<div class="col-lg-4">

    @if (Request.QueryString["success"] == "true")
    {
        <div class="alert alert-success"><strong>Ditt lösenord är nu ändrat.</strong></div>
    }
        
    @if (Request.QueryString["error"] == "invalid-member")
    {
        <div class="alert alert-danger"><strong>Fel lösenord.</strong> Ditt nuvarande lösenord stämmer inte.</div>
    }
        
    @if (Request.QueryString["error"] == "invalid-model")
    {
        <div class="alert alert-danger"><strong>Lösenord saknas.</strong> Du måste ange ett nytt lösenord.</div>
    }
        
    @using (Html.BeginUmbracoForm<Chalmers.ILL.Controllers.SurfaceControllers.PasswordSurfaceController>("ChangePassword", null, new { @role = "form" }))
    {
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(model => model.CurrentPassword)
            @Html.PasswordFor(model => model.CurrentPassword, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.CurrentPassword)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.NewPassword)
            @Html.PasswordFor(model => model.NewPassword, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.NewPassword)
        </div>
        <!--<div class="form-group">
            <label for="NewPasswordCheck">Upprepa lösenord</label>
            <input type="password" class="form-control" id="NewPasswordCheck" />
        </div>-->          
        <div id="valid-message"></div>
        <script type="text/javascript">
        </script>
        <button type="submit" class="btn btn-success">Ändra lösenord</button>
    }
</div>
